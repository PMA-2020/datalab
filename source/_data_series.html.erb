<!-- Modal Button -->
<div class='row'>
  <div class='col-md-12'>
    <button type="button"
            id="btn-choose-country-rounds"
            class="btn btn-primary btn-block i18nable chart-control"
            data-key="choose country-rounds"
            data-toggle="modal"
            data-target="#countryRoundModal"
            data-backdrop="static"
            data-keyboard="false">
      Choose Country-Rounds
    </button>
  </div>
</div>
<!-- Modal -->
<div id="modal-wrapper">
<div class="modal fade"
     id="countryRoundModal"
     tabindex="-1"
     data-backdrop="static"
     data-keyboard="false"
     role="dialog"
     aria-labelledby="countryRoundModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button"
                id="closeCountryRoundModal"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title i18nable"
            id="countryRoundModalLabel"
            data-key="country round selection">
          Country Round Selection
        </h4>
      </div>
      <div class="modal-body">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
          <%= partial 'data_series_limiters' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button"
                id="finishCountryRoundModal"
                class="btn btn-default"
                data-dismiss="modal">
          Done
        </button>
      </div>
    </div>
  </div>
</div>
</div>